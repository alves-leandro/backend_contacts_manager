            "description": "Created",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "$ref": "#/components/schemas/Contact"
                }
              }
            }
          }
        }
      },
      "get": {
        "summary": "Listar Contatos",
        "description": "Essa rota será responsável por listar todos os Contatos do Cliente",
        "tags": ["Contact"],
        "security": [{ "bearerAuth": [] }],
