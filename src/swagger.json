{
  "openapi": "3.0.0",
  "info": {
    "title": "API Gerenciador de Contatos",
    "description": "Tem como objetivo o cadastro de contatos",
    "contact": {
      "email": "l.alves85@live.com"
    },
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "http://localhost:3001/",
      "description": "API de testes"
    }
  ],
  "paths": {
    "/login": {
      "post": {
        "sumary": "Login do Cliente",
        "description": "Será o responsável pelo login do cliente na aplicação",
        "tags": ["Client"],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Login"
              },
              "examples": {
                "cliente": {
                  "value": {
                    "email": "exemplo@mail.com",
                    "password": "1234"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "400": {
            "description": "Bad Request"
          },
          "403": {
            "description": "Invalid credentials"
          },
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "$ref": "#/components/schemas/Login"
                }
              }
            }
          }
        }
      }
    },
    "/client": {
      "post": {
        "summary": "Cadastro de Cliente",
        "description": "Essa rota será responsável por cadastrar um novo Cliente",
        "tags": ["Client"],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Client"
              },
              "examples": {
                "cliente": {
                  "value": {
                    "name": "Cliente1",
                    "email": "client1@mail.com",
                    "phone": "0000000000",
                    "password": "1234"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "400": {
            "description": "Bad Request"
          },
          "409": {
            "description": "Client already exists"
          },
          "201": {
            "description": "Created",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "$ref": "#/components/schemas/Client"
                }
              }
            }
          }
        }
      },
      "get": {
        "summary": "Listar Clientes",
        "description": "Essa rota será responsável por listar todos os Clientes",
        "tags": ["Client"],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "$ref": "#/components/schemas/Client"
                }
              },
              "example": [
                {
                  "id": "92ae9870-202e-4e13-bb47-f02c2d900fcc",
                  "name": "Client 1",
                  "email": "client1@mail.com",
                  "password": "$2a$10$rqEd8XRCkyGAlqd.BIwUDOYyo4moMLRl9Ae1yhTdE/kGwMQiX4e4y",
                  "phone": "1234567890"
                },
                {
                  "id": "bb41727c-ea88-4abc-848c-902e7f5c90a0",
                  "name": "Client 2",
                  "email": "Client2@mail.com",
                  "password": "$2a$10$sBT5WfC2cT7McGEP6MnANOnV5U0YVee0Va6HHAJkIfnzBfBIulY7G",
                  "phone": "99999999999"
                }
              ]
            }
          }
        }
      }
    },
    "/client/{uuid}": {
      "patch": {
        "summary": "Alterar dados do Cliente",
        "description": "Essa rota será responsável por alterar os dados de um Cliente",
        "tags": ["Client"],
        "security": [{ "bearerAuth": [] }],
        "parameters": [
          {
            "name": "uuid",
            "in": "path",
            "description": "Cliente pelo UUID",
            "required": true
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Client"
              },
              "examples": {
                "cliente": {
                  "value": {
                    "name": "Cliente 1",
                    "email": "cliente1@mail.com",
                    "phone": "333333333",
                    "password": "1234"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "401": {
            "description": "invalid token"
          },
          "403": {
            "description": "You don`t have permissions"
          },
          "404": {
            "description": "Client not found"
          },
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "$ref": "#/components/schemas/Client"
                }
              }
            }
          }
        }
      },
      "delete": {
        "summary": "Deletar Cliente",
        "description": "Essa rota será responsável por remover um Cliente",
        "tags": ["Client"],
        "security": [{ "bearerAuth": [] }],
        "parameters": [
          {
            "name": "uuid",
            "in": "path",
            "description": "Cliente pelo UUID",
            "required": true
          }
        ],
        "responses": {
          "401": {
            "description": "invalid token"
          },
          "403": {
            "description": "You don`t have permissions"
          },
          "404": {
            "description": "Client not found"
          },
          "204": {
            "description": "No Content"
          }
        }
      }
    },
