    "/forgotpassword": {
      "post": {
        "summary": "Recuperar Senha",
        "description": "Essa rota será responsável por recuperar a senha do cliente",
        "tags": ["Client"],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "email": {
                    "type": "string"
                  }
                },
                "required": ["email"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "OK"
          },
          "404": {
            "description": "Client not found"
          }
        }
      }
    }
  },
  "components": {
